<?xml version="1.0" encoding="UTF-8"?>
<config>
  <!-- Sources -->
  <sources ignoredDirs="CVS:.svn:.swp:.git:tmp:.DS_Store">
    <source name="drupal" scanPath="/home/webapps/myapp" documentRoot="/home/webapps/myapp" basePath="/" />
  </sources>

  <!-- Servers -->
  <servers>
    <server name="Rackspace Cloud Files" transporter="cloudfiles">
      <username><%= node[:drupal][:fileconveyor][:username] %></username>
      <api_key><%= node[:drupal][:fileconveyor][:api_key] %></api_key>
      <container><%= node[:drupal][:fileconveyor][:container] %></container>
    </server>
  </servers>
 <!-- Rules -->
  <rules>
    <rule for="drupal" label="Drupal files">
      <filter>
        <paths>sites/default/files</paths>
        <extensions>js:ico:gif:png:jpg:jpeg:svg:swf:css:mp4:ogv:pdf</extensions>
      </filter>
      <processorChain>
      </processorChain>
      <destinations>
        <destination server="Rackspace Cloud Files" path="" />
      </destinations>
    </rule>
  </rules>
</config>
